<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal">

        <com.cj.dreams.video.view.CircleImageView
            android:id="@+id/evaluate_icon"
            android:layout_marginLeft="10dp"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/evaluate_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:paddingRight="10.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/evaluate_good_times"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="10dp"
                    android:gravity="center_vertical"
                    android:text="赞的个数" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_zan" />
            </LinearLayout>

            <TextView
                android:id="@+id/evaluate_name"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:text="评论人姓名" />

            <TextView
                android:id="@+id/evaluate_time"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:textSize="8dp"
                android:textColor="@color/black"
                android:text="评论时间" />

            <TextView
                android:id="@+id/evaluate_detail"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:textSize="14dp"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:textColor="@color/black"
                android:text="评论详情" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#dcdce0" />
</LinearLayout>
