<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="99dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/videolist_icon"
            android:layout_width="165dp"
            android:layout_height="95dp"
            android:paddingLeft="10.5dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:src="@drawable/wait" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/videolist_title"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_gravity="center"
                android:paddingTop="16dp"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:textColor="#515151"
                android:text="播放列表标题" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="#20000000"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/videolist_play_icon"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_bof" />

                    <ImageView
                        android:id="@+id/videolist_play_icon_select"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_bof_d" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/videolist_play_times"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:text="播放次数" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/videolist_collect_icon"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_shouc" />

                    <ImageView
                        android:id="@+id/videolist_collect_icon_select"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_shouc_d" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/videolist_collect_times"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:text="播放次数" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/videolist_good_icon"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_z" />
                    <ImageView
                        android:id="@+id/videolist_good_icon_select"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_z_d" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/videolist_good_times"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:text="播放次数" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="#dcdce0" />
</LinearLayout>
